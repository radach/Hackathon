<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carlos.gamify">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".BreaktimeActivity" />
        <activity android:name=".PerfilActivity" />
        <activity android:name=".PedirFavorActivity" />
        <activity android:name=".BreaktimesAndFavorsActivity" />
        <activity android:name=".MotivarActivity" />
        <activity android:name=".HistoricoActivity"/>
        <activity android:name=".EditPerfilActivity"/>
        <activity android:name=".BreaktimeDetail"
            android:parentActivityName=".HomeActivity"
            />
        <activity android:name=".FavoresDetail"
            android:parentActivityName=".HomeActivity"
            />
        <service android:name="org.eclipse.paho.android.service.MqttService">
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


</manifest>