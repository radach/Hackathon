<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carlos.gamify.EditPerfilActivity">


    <Button
        android:id="@+id/save_changes_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Save" />

    <TextView
        android:id="@+id/nome_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/input_name_edit_perfil"
        android:layout_marginTop="34dp"
        android:text="Nome" />

    <TextView
        android:id="@+id/email_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/input_password_edit_perfil"
        android:layout_marginStart="39dp"
        android:layout_marginTop="15dp"
        android:text="Email" />

    <TextView
        android:id="@+id/andar_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_email_edit_perfil"
        android:layout_below="@+id/input_email_edit_perfil"
        android:layout_marginTop="20dp"
        android:text="Andar" />

    <TextView
        android:id="@+id/foto_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_email_edit_perfil"
        android:layout_below="@+id/spinner_andar_edit_perfil"
        android:layout_marginTop="15dp"
        android:text="Fotografia" />

    <EditText
        android:id="@+id/input_name_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_edit_perfil"
        android:layout_below="@+id/nome_edit_perfil"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/input_email_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_edit_perfil"
        android:layout_below="@+id/email_edit_perfil"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinner_andar_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/andar_edit_perfil"
        android:layout_below="@+id/andar_edit_perfil" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/foto_edit_perfil"
        android:layout_below="@+id/foto_edit_perfil"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/password_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/input_name_edit_perfil"
        android:layout_below="@+id/input_name_edit_perfil"
        android:layout_marginTop="12dp"
        android:text="Password" />

    <EditText
        android:id="@+id/input_password_edit_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password_edit_perfil"
        android:layout_below="@+id/password_edit_perfil"
        android:ems="10"
        android:inputType="text"
        android:textSize="14sp" />

    <Button
        android:id="@+id/edit_profile_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save_changes_perfil"
        android:layout_alignBottom="@+id/save_changes_perfil"
        android:layout_alignEnd="@+id/password_edit_perfil"
        android:text="@string/back"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
